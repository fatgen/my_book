
<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>表紙</th>
      <th>タイトル</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>出版日</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><div align="center"><img src="<%= book.image %>" class = "img-responsive" alt ="Responsive images" </div></td>
        <td><%= book.book %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.company %></td>
        <td><%= book.date %></td>
        <td><%= book.code %></td>
        <td><%= link_to '閲覧', book, class:"btn btn-success"  %></td>
        <td><%= link_to '編集', edit_book_path(book), class:"btn btn-warning"  %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当に良いですか？' } , class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '新しい書籍の登録', new_book_path, class:"btn btn-primary btn-lg" %>
</div>
